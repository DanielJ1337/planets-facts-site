<%- include ('header') -%>
<main class="main">
    <div class="main__mobile-menu">
        <div class="overview-wrapper">
            <div class="overview">
                Overview
            </div>
        </div>
        <div class="structure-wrapper">
            <div class="structure">
                Structure
            </div>
        </div>
        <div class="surface-wrapper">
            <div class="surface">
                Surface
            </div>
        </div>
    </div>
    <section class="planet">
        <div class="planet__image-container">
            <img class="planet__image" src=<% if(urlString === planets[strippedId].link.overview) { %>
                <%= planets[strippedId].images.planet %> alt=<%= planets[strippedId].name %>>
                <% } else if (urlString === planets[strippedId].link.structure) { %>
                    <%= planets[strippedId].images.internal %>
                    <% } else if (urlString === planets[strippedId].link.geology) { %>
                        <%= planets[strippedId].images.geology %>
                        <% } %>
        </div>
        <div class="planet__info-wrapper">
            <div class="planet__text-wrapper">
                <h1 class="planet__name"><%= planets[strippedId].name %></h1>
                <p class="planet__info"><% if (urlString === planets[strippedId].link.overview) { %>
                    <%= planets[strippedId].overview.content %> 
                        <% } else if (urlString === planets[strippedId].link.structure) { %>
                            <%= planetStructures[strippedId].structure %>
                            <% } else if (urlString === planets[strippedId].link.geology) Â { %>
                                <%= planets[strippedId].geology.content %>
                                <% } %>
                 </p>
                <p class="planet__source">Source: <a class="planet__hyperlink"
                        href=<%= planets[strippedId].overview.source %>>Wikipedia</a><span></span></p>
            </div>
            <div class="planet__links-container">
                <div class="planet__buttons">
                    <span class="planet__buttons--number">01</span>
                    <a class="planet__link--overview" href=<%= planets[strippedId].link.overview %>>Overview</a>
                </div>
                <div class="planet__buttons">
                    <span class="planet__buttons--number">02</span>
                    <a class="planet__link--internal" href=<%= planets[strippedId].link.structure %>> Internal
                        structure</a>
                </div>
                <div class="planet__buttons">
                    <span class="planet__buttons--number">03</span>
                    <a class="planet__link--surface" href=<%= planets[strippedId].link.geology %>>Surface geology</a>
                </div>
            </div>
        </div>
        <div class="planet__add-info">
            <div class="add-info__rotation">
                <span>Rotation Time</span>
                <p><%= planets[strippedId].rotation %> </p>
            </div>
            <div class="add-info__evolution">
                <span>Revolution Time</span>
                <p><%= planets[strippedId].revolution %> </p>
            </div>
            <div class="add-info__radius">
                <span>Radius</span>
                <p><%= planets[strippedId].radius %> </p>
            </div>
            <div class="add-info__temp">
                <span>Average Temp.</span>
                <p><%= planets[strippedId].temperature %> </p>
            </div>
        </div>
    </section>
</main>
<%- include ('footer') -%>